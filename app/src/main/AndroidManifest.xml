<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.douglimar.surpresinhadiadesorte">

    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.ConfiguradorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.douglimar.surpresinhadiadesorte.WebviewActivity" />
        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.ResultActivity"
            android:label="@string/title_activity_result2"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>


</manifest>