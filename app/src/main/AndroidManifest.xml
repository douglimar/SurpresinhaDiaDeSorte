<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.douglimar.surpresinhadiadesorte">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.ConfiguradorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.douglimar.surpresinhadiadesorte.WebviewActivity" />
        <activity
            android:name="br.com.douglimar.surpresinhadiadesorte.ResultActivity"
            android:label="@string/title_activity_result2"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>


</manifest>